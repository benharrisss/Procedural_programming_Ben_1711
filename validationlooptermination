#include <stdio.h>

int main(){
    int num;
    int termination = 0;
    while (termination == 0)
    {
        printf("Enter a number: ");
        scanf("%d", &num);
        if (num == -1)
        {
            printf("Termination value entered");
            termination = 1;
        }
        else if (num >=0 && num <=100)
        {
            printf("The number %d is between 0 and 100", num);
            termination = 1;
        }
        else 
        {
            termination = 0;
        }
    }
}